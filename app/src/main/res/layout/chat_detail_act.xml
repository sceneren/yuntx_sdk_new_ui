<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ecdemo="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f1f4f8"
              android:orientation="vertical">


    <include layout="@layout/include_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_full"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp">

        <TextView
            android:id="@+id/tv_avatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="18dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:textColor="#ffffff"
            android:textSize="15sp"
            tools:text="2"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="22dp"
            android:textColor="#333333"
            android:textSize="14sp"
            tools:text="诗慧"/>

    </LinearLayout>


    <com.yuntongxun.ecdemo.common.view.SettingItem
        android:id="@+id/set_top"
        style="@style/settings_item_layout_single"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        ecdemo:item_accessoryType="switchbutton"
        ecdemo:item_showDivider="true"
        ecdemo:item_titleText="置顶聊天"/>


    <com.yuntongxun.ecdemo.common.view.SettingItem
        android:id="@+id/no_disturbing"
        style="@style/settings_item_layout_single"
        android:background="@color/white"
        ecdemo:item_accessoryType="switchbutton"
        ecdemo:item_showDivider="true"
        ecdemo:item_titleText="消息免打扰"/>


    <com.yuntongxun.ecdemo.common.view.InfoItem
        android:id="@+id/set_bg"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"></com.yuntongxun.ecdemo.common.view.InfoItem>

    <TextView
        android:id="@+id/tv_clear_histroy"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textColor="#333333"
        android:textSize="15sp"
        android:text="清空聊天记录"
        />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/sv_rot"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_height="wrap_content">




        <TextView
            android:layout_width="match_parent"
            android:paddingLeft="15dp"
            android:layout_marginTop="20dip"
            android:drawableLeft="@drawable/detail_robot"
            android:drawablePadding="20dip"
            android:text="智能机器人"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#333333"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="21sp"
                android:gravity="end"
                android:text="功能介绍:"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:textSize="15sp"
                android:id="@+id/tv_robot"
                android:textColor="#666666"
                android:letterSpacing="-0.02"
                android:lineSpacingExtra="8sp"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>