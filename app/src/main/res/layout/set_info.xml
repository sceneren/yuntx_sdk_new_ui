<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ecdemo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/main_bg"

    android:layout_height="match_parent">

    <include layout="@layout/include_toolbar" />


    <EditText
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:singleLine="true"
        android:id="@+id/et_single"
        android:paddingLeft="@dimen/phone_top"
        android:gravity="center_vertical"
        android:layout_height="50dip" />

    <requestFocus/>
    <EditText
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingTop="5dip"
        android:paddingBottom="5dip"
        android:gravity="top"
        android:id="@+id/et_mult"
        android:paddingLeft="@dimen/phone_top"
        android:layout_height="120dip" />

    <requestFocus/>



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_sex"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/content_bg"
            android:id="@+id/re_nan"
            android:clickable="true"
            android:minHeight="@dimen/min_height"
            android:gravity="center_vertical"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="男"
                android:textColor="#333333"
                android:textSize="16sp"
                />



            <CheckBox
                android:id="@+id/cb_nan"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dip"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:button="@drawable/check_state"
                 />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/content_bg"
            android:id="@+id/re_nv"
            android:clickable="true"
            android:minHeight="@dimen/min_height"
            android:gravity="center_vertical"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="女"
                android:textColor="#333333"
                android:textSize="16sp"
                />



            <CheckBox
                android:id="@+id/cb_nv"
                android:layout_width="wrap_content"
                android:layout_marginRight="15dip"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:button="@drawable/check_state"
                 />
        </RelativeLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/re_age"
        android:background="#F0F0F0"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D0D0D0" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="年龄            21岁"
                android:paddingLeft="5dp"
                android:textColor="#000000" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#D0D0D0" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>