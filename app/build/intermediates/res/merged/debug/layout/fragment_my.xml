<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/self_info"
        android:layout_height="86dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_my_header"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10.5dp"
             />

        <TextView
            android:id="@+id/tv_my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="21dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/tag"
            android:layout_marginRight="7dp"
            android:layout_toRightOf="@+id/iv_my_header"
            android:textColor="#333333"
            android:textSize="16sp"
            tools:text="夏天" />

        <TextView
            android:id="@+id/tv_my_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toLeftOf="@+id/tag"
            android:layout_marginRight="7dp"
            android:layout_alignLeft="@+id/tv_my_name"
            android:layout_below="@+id/tv_my_name"
            android:layout_marginTop="15dp"
            android:textColor="#666666"
            android:textSize="13sp"
            tools:text="17600606588" />

        <ImageView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:src="@drawable/workbench_icon_go" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_my_wallte"
        style="@style/MyContentStyle"
        android:layout_marginTop="15.5dp"
        android:visibility="gone"
        android:drawableLeft="@drawable/aboutme_icon_qianbao"
        android:text="钱包" />

    <include layout="@layout/include_margin_left_52__black_line" />

    <TextView
        android:id="@+id/tv_my_emo"
        style="@style/MyContentStyle"
        android:layout_marginTop="15.5dp"
        android:drawableLeft="@drawable/aboutme_icon_biaoqing"
        android:text="表情" />

    <TextView
        android:id="@+id/tv_my_about"
        style="@style/MyContentStyle"
        android:layout_marginTop="15.5dp"
        android:drawableLeft="@drawable/aboutme_icon_guanyu"
        android:text="关于我们" />

    <include layout="@layout/include_margin_left_52__black_line" />

    <TextView
        android:id="@+id/tv_my_recommend"
        style="@style/MyContentStyle"
        android:drawableLeft="@drawable/aboutme_icon_fankui"
        android:text="意见反馈" />

    <TextView
        android:id="@+id/tv_my_app_recommend"
        style="@style/MyContentStyle"
        android:layout_marginTop="15.5dp"
        android:drawableLeft="@drawable/aboutme_icon_guanyu"
        android:text="推荐给好友" />

    <include layout="@layout/include_margin_left_52__black_line" />

    <TextView
        android:id="@+id/tv_my_official_accounts"
        style="@style/MyContentStyle"
        android:drawableLeft="@drawable/aboutme_icon_fankui"
        android:text="关注我们" />

    <TextView
        android:id="@+id/tv_my_update"
        style="@style/MyContentStyle"
        android:layout_marginTop="15.5dp"
        android:drawableLeft="@drawable/aboutme_icon_setting"
        android:text="检查更新" />

    <TextView
        android:id="@+id/tv_my_setting"
        style="@style/MyContentStyle"
        android:layout_marginTop="15.5dp"
        android:drawableLeft="@drawable/aboutme_icon_setting"
        android:text="设置" />

</LinearLayout>