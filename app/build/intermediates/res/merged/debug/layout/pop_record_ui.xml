<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="264.5dp"
    android:paddingTop="15dp"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:textColor="#808080"
        tools:text="0:06"/>

    <ImageButton
        android:id="@+id/ib_play"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@null"
        android:src="@drawable/chat_yuyin_icon_songshoushiting_high"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="13dp" />



    <ImageButton
        android:id="@+id/ib_record"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:background="@null"
        android:src="@drawable/chat_yuyin_icon_duijiang_high"

        android:layout_marginTop="26dp"
        android:layout_alignTop="@+id/ib_cancle"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:src="@drawable/chat_yuyin_icon_delete_normal"
        android:id="@+id/ib_cancle"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/ib_play"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>